---
import Anchors from "./Anchors.astro";
---

<menu
  class="fixed w-full h-full bg-[#0c0c0c] z-20 hidden justify-center items-center"
>
  <i
    class="ri-close-line absolute top-2.5 right-1 w-[50px] h-[50px] text-[45px] flex justify-center items-center"
    id="close-menu"></i>

  <nav
    class="w-[90%] h-full flex flex-col justify-center items-center space-y-5"
  >
    {
      Astro.url.pathname !== "/" ? (
        <Anchors href="/" title="Inicio" icon="home-2" type="menu" />
      ) : null
    }
    <Anchors href="/proyectos" title="Proyectos" icon="bookmark" type="menu" />
    <Anchors
      href="/testimonios"
      title="Testimonios"
      icon="chat-1"
      type="menu"
    />
    <Anchors href="/contacto" title="Contacto" icon="inbox" type="menu" />
  </nav>
</menu>
